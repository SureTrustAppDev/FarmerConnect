<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".Donation">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/product_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/green_300_7f"
            android:elevation="4dp"
            app:titleTextColor="@color/white_A700" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/product_toolbar">



        </RelativeLayout>






    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation"
        app:subheaderColor="@color/green_300_7f"
        app:background="@drawable/prod_btm"
        app:itemIconTint="#7f94bb86"
        app:itemTextColor="#7f94bb86"
        app:headerLayout="@layout/navigator"
        app:menu="@menu/drawer"
        android:background="@color/white"
        android:layout_gravity="start"
        />
</androidx.drawerlayout.widget.DrawerLayout>